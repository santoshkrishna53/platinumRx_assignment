{
    "info": {
        "_postman_id": "a1b2c3d4-e5f6-4a5b-bc6d-7e8f9a0b1c2d",
        "name": "PlatinumRx Payment Gateway",
        "description": "Postman collection for testing the PlatinumRx Payment Gateway Service, including dynamic routing and health monitoring.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Initiate Transaction",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"order_id\": \"ORDER_{{$timestamp}}\",\n  \"amount\": 1500.00,\n  \"currency\": \"INR\",\n  \"customer_email\": \"test@example.com\"\n}"
                },
                "url": {
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "transactions",
                        "initiate"
                    ]
                },
                "description": "Initiates a new transaction. The service will automatically pick a healthy gateway (Razorpay, PayU, or Cashfree) based on weighted distribution."
            },
            "response": []
        },
        {
            "name": "2. Process Callback (Success)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"order_id\": \"ORDER_REPLACE_ME\",\n  \"gateway\": \"razorpay\",\n  \"status\": \"success\"\n}"
                },
                "url": {
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "transactions",
                        "callback"
                    ]
                },
                "description": "Simulates a successful payment callback from a gateway. Update the `order_id` and `gateway` based on the response from the Initiate Transaction call."
            },
            "response": []
        },
        {
            "name": "3. Process Callback (Failure)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"order_id\": \"ORDER_REPLACE_ME\",\n  \"gateway\": \"razorpay\",\n  \"status\": \"failure\"\n}"
                },
                "url": {
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "transactions",
                        "callback"
                    ]
                },
                "description": "Simulates a failed payment callback. Use this multiple times (at least 6 times with >10% failure rate) to test the circuit breaker logic."
            },
            "response": []
        },
        {
            "name": "4. Get Health Statistics",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "transactions",
                        "health-stats"
                    ]
                },
                "description": "Retrieve real-time failure rates and circuit status for all gateways."
            },
            "response": []
        },
        {
            "name": "5. Root App Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        ""
                    ]
                },
                "description": "Basic health check of the NestJS application container."
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        }
    ]
}